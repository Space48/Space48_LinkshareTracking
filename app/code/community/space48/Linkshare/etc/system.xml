<?xml version="1.0" ?>
<config>
    <sections>
        <Space48_Linkshare translate="label">
            <label>Space48 Linkshare</label>
            <tab>space48adminconf</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <linkshare translate="label">
                    <label>LinkShare Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <mid translate="label comment">
                            <label>MID</label>
                            <comment>
                                <![CDATA[Enter your unique Merchant ID from link share]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mid>
                        <protocol>
                            <label>Pixel HTTP/S protocol</label>
                            <comment>
                                <![CDATA[Enter the correct protocol to use ( HTTP / HTTPS )]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </protocol>
                        <cookietimedays>
                            <label>Cookie Time in Days</label>
                            <comment>
                                <![CDATA[Cookie Lifetime in days]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cookietimedays>
                    </fields>
                </linkshare>
            </groups>
        </Space48_Linkshare>
    </sections>
</config>